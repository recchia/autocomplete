{% extends "::base.html.twig" %}

{% block body %}
    <div class="container col-md-8 col-md-offset-2">
        <div class="well well bs-component">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <fieldset>
                <legend>Search Person</legend>
                <div class="form-group">
                    {{ form_label(form.name, 'Name', {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                    <div class="col-lg-10">
                        {{ form_widget(form.name, {'label_attr': {'class': 'col-lg-2 control-label'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        {{ form_widget(form.search, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                </div>
            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('#appbundle_search_name').autocompleter({url_list: '{{ path('person_search') }}', url_get: '{{ path('person_get') }}' });
    </script>
{% endblock %}